<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.CounselorMapper">

 <!-- 로그인용 상담사 조회 -->
  <select id="findByCounselorId" resultType="com.example.demo.model.Counselor">
    SELECT * FROM counselor
    WHERE counselor_id = #{counselorId}
  </select>

  <!-- 상담 가능 시간 등록 -->
  <insert id="insertAvailableTime">
    INSERT INTO counsel_available (counselor_id, start)
    VALUES (#{counselorId}, #{start})
  </insert>

  <!-- 상담사 ID로 가능한 시간 목록 조회 -->
  <select id="selectAvailableTimesByCounselor" resultType="com.example.demo.model.CounselAvailable">
    SELECT * FROM counsel_available
    WHERE counselor_id = #{counselorId}
    ORDER BY start ASC
  </select>
  
</mapper>
